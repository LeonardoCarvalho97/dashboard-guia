{
  "version": 2,
  "builds": [
    {
      "src": "./index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "handle": "allow-origin",
      "src": "/(.*)",
      "methods": ["GET", "POST"],
      "headers": {
        "Access-Control-Allow-Origin": "https/localhost:3000",
        "Content-Type": "application/json"
      },
      "continue": true
    },
    {
      "src": "/api/customers/:id",
      "methods": ["DELETE"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type"
      },
      "continue": true,
      "dest": "https://dashboard-guia.vercel.app/customers/:id"
    }
  ]
}
